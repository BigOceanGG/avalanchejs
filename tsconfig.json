{
  "compilerOptions": {
    "outDir": "./typings/",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["dom", "es2016"],
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declarationMap": true,
    "noFallthroughCasesInSwitch": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "typeRoots": ["./typings/**", "./node_modules/@types"],
    // "sourceMap": true
  },
  "files": [
    "examples/platformvm/proofOfPossession.ts"
  ],
  "exclude": [
    "node_modules", 
    "examples", 
    "typings"
  ],
  "typeAcquisition": {
    "enable": true,
    "exclude": ["bn.js"]
  }
}
